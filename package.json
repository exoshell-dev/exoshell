{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build:",
    "ci": "bun run format:check && bun run lint && bun run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint:",
    "prepare": "husky install",
    "test": "turbo run test",
    "update": "bun x npm-check-updates -ui -ws --root"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true
  },
  "dependencies": {
    "@hello-pangea/dnd": "16.6.0",
    "@mantine/core": "7.7.1",
    "@mantine/form": "7.7.1",
    "@mantine/hooks": "7.7.1",
    "@mantine/modals": "7.7.1",
    "@mantine/notifications": "7.7.1",
    "@mantine/nprogress": "7.7.1",
    "@mantine/spotlight": "7.7.1",
    "@tanstack/react-query": "5.29.0",
    "jotai": "2.7.2",
    "next": "14.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.0.1",
    "react-markdown": "9.0.1",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.1.4",
    "@tanstack/eslint-plugin-query": "5.28.11",
    "@tanstack/react-query-devtools": "5.29.0",
    "@types/node": "20.12.5",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "autoprefixer": "10.4.19",
    "bun-types": "1.1.2",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.4",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.38",
    "postcss-preset-mantine": "1.13.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.13",
    "sort-package-json": "2.10.0",
    "tailwindcss": "3.4.3",
    "turbo": "1.13.2",
    "typescript": "5.4.4"
  },
  "packageManager": "bun@1.1.0"
}
