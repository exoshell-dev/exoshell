{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build:",
    "ci": "bun run format:check && bun run lint && bun run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test",
    "update": "bun x npm-check-updates -ui -ws --root"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "dependencies": {},
  "devDependencies": {
    "@tauri-apps/cli": "1.5.9",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "bun-types": "1.0.20",
    "eslint": "8.56.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "sort-package-json": "2.6.0",
    "turbo": "1.11.2",
    "typescript": "5.3.3"
  },
  "packageManager": "bun@1.0.13"
}
