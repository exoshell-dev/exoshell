{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build:",
    "ci": "bun run format:check && bun run lint && bun run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint:",
    "prepare": "husky install",
    "test": "turbo run test",
    "update": "bun x npm-check-updates -ui -ws --root"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true
  },
  "dependencies": {
    "@hello-pangea/dnd": "16.6.0",
    "@mantine/code-highlight": "7.9.2",
    "@mantine/core": "7.9.2",
    "@mantine/form": "7.9.2",
    "@mantine/hooks": "7.9.2",
    "@mantine/modals": "7.9.2",
    "@mantine/notifications": "7.9.2",
    "@mantine/nprogress": "7.9.2",
    "@mantine/spotlight": "7.9.2",
    "@tanstack/query-core": "5.36.1",
    "@tanstack/react-query": "5.37.1",
    "@vercel/postgres": "0.8.0",
    "allotment": "1.20.1",
    "clsx": "2.1.1",
    "drizzle-orm": "0.30.10",
    "jotai": "2.8.0",
    "mantine-contextmenu": "7.9.1",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "5.2.1",
    "react-markdown": "9.0.1",
    "reactflow": "11.11.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.2.3",
    "@tanstack/eslint-plugin-query": "5.35.6",
    "@tanstack/react-query-devtools": "5.37.1",
    "@types/node": "20.12.12",
    "@types/react": "18.3.2",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.9.0",
    "@typescript-eslint/parser": "7.9.0",
    "autoprefixer": "10.4.19",
    "bun-types": "1.1.8",
    "drizzle-kit": "0.21.2",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.38",
    "postcss-preset-mantine": "1.15.0",
    "postcss-simple-vars": "7.0.1",
    "posthog-js": "1.131.4",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "sort-package-json": "2.10.0",
    "tailwindcss": "3.4.3",
    "turbo": "1.13.3",
    "typescript": "5.4.5",
    "vercel": "34.2.0"
  },
  "packageManager": "bun@1.0.0"
}
