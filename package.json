{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build:",
    "ci": "bun run format:check && bun run lint && bun run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint:",
    "prepare": "husky install",
    "test": "turbo run test",
    "update": "bun x npm-check-updates -ui -ws --root"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true
  },
  "dependencies": {
    "@hello-pangea/dnd": "16.6.0",
    "@mantine/core": "7.6.2",
    "@mantine/form": "7.6.2",
    "@mantine/hooks": "7.6.2",
    "@mantine/modals": "7.6.2",
    "@mantine/notifications": "7.6.2",
    "@mantine/nprogress": "7.6.2",
    "@mantine/spotlight": "7.6.2",
    "@tanstack/react-query": "5.28.8",
    "jotai": "2.7.1",
    "next": "14.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.0.1",
    "react-markdown": "9.0.1",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.1.4",
    "@tanstack/react-query-devtools": "5.28.8",
    "@types/node": "20.11.30",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "autoprefixer": "10.4.18",
    "bun-types": "1.0.33",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.4",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.37",
    "postcss-preset-mantine": "1.13.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.12",
    "sort-package-json": "2.8.0",
    "tailwindcss": "3.4.1",
    "turbo": "1.12.5",
    "typescript": "5.4.2"
  },
  "packageManager": "bun@1.0.0"
}
