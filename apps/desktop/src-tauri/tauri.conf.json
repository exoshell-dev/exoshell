{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "ExoShell",
    "version": "0.0.0"
  },
  "build": {
    "beforeBuildCommand": "bun run build:web",
    "beforeDevCommand": "bun run dev:web",
    "devPath": "http://localhost:3333",
    "distDir": "../out"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true,
        "hide": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.exoshell.exoshell",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "height": 600,
        "width": 800,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "quickbar",
        "url": "quickbar",
        "center": true,
        "minWidth": 75,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "titleBarStyle": "Transparent",
        "transparent": true,
        "visible": false
      }
    ]
  }
}
