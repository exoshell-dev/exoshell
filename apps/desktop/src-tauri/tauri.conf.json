{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "exoshell"
  },
  "build": {
    "beforeBuildCommand": "bun run build:web",
    "beforeDevCommand": "bun run dev:web",
    "devPath": "http://localhost:3333",
    "distDir": "../out"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true,
        "hide": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "title": "ExoShell"
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.exoshell.exoshell",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "minimumSystemVersion": "12.0",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": ["deb", "appimage", "nsis", "app", "dmg", "updater", "msi"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/exoshell-dev/exoshell/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBRDVEMzY0QzJCQTJBQUQKUldTdEtyckNaTlBWMmw1cmdCcVhHTVRrbCtrZ3ZDb0VFMWl2MzVjWVl4b2Q1OW9rTUdjekVGRmEK",
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "label": "main",
        "height": 600,
        "width": 800,
        "hiddenTitle": true,
        "title": "ExoShell",
        "titleBarStyle": "Overlay"
      },
      {
        "label": "quickbar",
        "url": "quickbar",
        "center": true,
        "minWidth": 75,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "titleBarStyle": "Transparent",
        "transparent": true,
        "visible": false
      }
    ]
  }
}
