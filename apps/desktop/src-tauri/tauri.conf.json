{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "exoshell"
  },
  "build": {
    "beforeBuildCommand": "bun run build:web",
    "beforeDevCommand": "bun run dev:web",
    "devPath": "http://localhost:3333",
    "distDir": "../out"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.exoshell.exoshell",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "minimumSystemVersion": "12.0",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      // Currently missing:
      // "rpm" because it's not available in our Tauri version yet
      // "msi" because it doesn't support semver
      "targets": ["deb", "appimage", "nsis", "app", "dmg", "updater"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "height": 600,
        "width": 800,
        "hiddenTitle": true,
        "title": "ExoShell",
        "titleBarStyle": "Overlay"
      }
    ]
  }
}
