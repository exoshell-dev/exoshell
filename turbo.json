{
  "$schema": "https://turbo.build/schema.json",
  // cSpell:ignore bun.lockb
  "globalDependencies": [
    "bun.lockb",
    "tsconfig.json",
    "scripts/**",
    ".mise.toml",
    ".mise.local.toml"
  ],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "//gen:types": {},
    "build:": {
      "dependsOn": ["^build:"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": ["dist/**"]
    },
    "clean": { "cache": false },
    "lint:": {},
    "test": {}
  }
}
